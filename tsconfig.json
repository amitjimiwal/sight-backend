{
  "compilerOptions": {
    "target": "es2016", //the language and environment for typescript
    "rootDir": "./src", //the root directory for typescript
    "module": "NodeNext", //the module system for typescript
    "declaration": true, //generate .d.ts files for typescript
    "outDir": "./dist", //the output directory for typescript
    "forceConsistentCasingInFileNames": true, //disallow inconsistently-cased references to the same file
    "strict": true, //enable all strict type-checking options
    "skipLibCheck": true, //skip type checking of all declaration files
    "noImplicitAny": true, //avoid use of any types
    "strictNullChecks": true, //avoid use of null types
    "allowSyntheticDefaultImports": true, //Allow 'import x from y' when a module doesn't have a default export.
    "moduleResolution": "NodeNext",
    "esModuleInterop": true //Allow default imports from modules with no default export
  },
  "include": ["src"], //the files to include in typescript
  "exclude": ["node_modules", "dist"], //the files to exclude from typescript
  "ts-node": {
    //options for ts-node
    "esm": true //enable esm module support
  }
}
